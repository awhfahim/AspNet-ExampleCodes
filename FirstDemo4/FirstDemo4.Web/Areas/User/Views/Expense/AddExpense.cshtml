@model AddExpenseModel;
@{
    ViewData["Title"] = "AddExpense";
}

<div class="col-md-12">
	<!-- general form elements -->
	<div class="card card-primary">
		<div class="card-header">
			<h3 class="card-title">Add New Expense</h3>
		</div>
		<!-- /.card-header -->
		<!-- form start -->
		<form asp-action="AddExpense" asp-controller="Expense" asp-area="User"
			  asp-antiforgery="true">
			<div class="card-body">
				<div class="form-group">
					<label asp-for="Amount">Amount</label>
					<input type="text" class="form-control" asp-for="Amount">
				</div>
				<div class="form-group">
					<label asp-for="Date">Date</label>
					<input type="text" class="form-control" asp-for="Date">
				</div>
				<div class="form-group">
					<label asp-for="Description">Description</label>
					<input type="text" class="form-control" asp-for="Description">
				</div>
				<div class="form-group">
					<label asp-for="Category.CategoryName">CategoryName</label>
					<input type="text" class="form-control" asp-for="Category.CategoryName">
				</div>
			</div>
			<!-- /.card-body -->

			<div class="card-footer">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
		</form>
	</div>
	<!-- /.card -->
</div>




