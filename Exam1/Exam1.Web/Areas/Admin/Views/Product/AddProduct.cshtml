@model AddProductModel;
@{
    ViewData["Title"] = "AddProduct";
}

<form asp-action="AddProduct" asp-controller="Product" asp-area="Admin" asp-antiforgery="true">
    <partial name="_ResponsePartial" />
    <div class="card-body">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Price">Product Price</label>
            <input type="number" asp-for="Price" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Weight">Product Weight</label>
            <input type="number" asp-for="Weight" class="form-control" />          
        </div>
        @{
            var fetchCategories = await Model.GetCategories();
        }
        <div class="form-group">
            <label asp-for="SelectedCategory">Select Category</label>
            <select class="form-select" aria-label="Default select example"  
                asp-for="SelectedCategory" 
                asp-items="@fetchCategories.Select(x => new SelectListItem{Value = x.Id.ToString(), Text = x.Name}).ToArray()">
                <option value="">Select an option</option>
            </select>
        </div>
    </div>
        <button class="btn btn-outline-primary"type="submit">Submit</button>
</form>

